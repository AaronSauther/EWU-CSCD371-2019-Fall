<Window x:Class="ShoppingList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoppingList"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="TitleRow" Height="2*"/>
            <RowDefinition x:Name="ListRow" Height="15*"/>
            <RowDefinition x:Name="AddButtonRow" Height="1*"/>
            <RowDefinition x:Name="EditRow" Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Shopping List" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <ListBox Grid.Row="1" x:Name="ShoppingList" ItemsSource="{Binding Items}" SelectedItem="{Binding CurrentItem}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type local:ShoppingItem}">
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Row="2" Content="Add" Name="AddButton" Command="{Binding AddItemCommand}"/>
        <TextBox x:Name="EditBox" Grid.Row="3" Text="{Binding CurrentItem.Name, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
